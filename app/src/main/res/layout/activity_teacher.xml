<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Teacher.TeacherActivity"
    android:background="@drawable/background">


    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:background="@drawable/rounded_edittext"
        android:id="@+id/textWiewHoca"/>
    <Button
        android:id="@+id/buttonTestEkle"
        android:layout_height="wrap_content"
        android:text="Test Ekle"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_2"/>
    <Button
        android:layout_height="wrap_content"
        android:id="@+id/buttonSonuc"
        android:text="Sonuç"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_2"/>
    <Button
        android:id="@+id/buttonCikis"
        android:layout_height="wrap_content"
        android:text="Çıkış"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_button_2"/>
</LinearLayout>